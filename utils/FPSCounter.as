package ffroman.utils{	import flash.text.TextField;	import flash.text.TextFormat;	import flash.display.Sprite;	import flash.utils.getTimer	import flash.events.*;	import ffroman.display.BtnPrototype;	public class FPSCounter extends Sprite{		private var update_time:int = 50;       // 表示が変わる時間（ミリ秒）		private var draw_count:int = 0;          // 描画カウント		private var old_timer:int =0;  // 時間待避		private var disp:TextField;		private var fps:uint=0;		private var color:uint;		private var btn:BtnPrototype;		private var fmt:TextFormat;		public function FPSCounter(col:uint=0x111111){			color = col;			old_timer = getTimer();			setDisplay();			addEventListener(Event.ENTER_FRAME,count);			btn = new BtnPrototype(this);			addChild(btn);		}		public function overFunc(){}		public function outFunc(){}		public function pressFunc(){}		public function releaseFunc(){			visible = false;		}		private function count(e:Event){			draw_count++;			if (getTimer()-old_timer >= update_time) {				// 少数第1位まで表示				var fps = draw_count * 1000 / (getTimer() - old_timer);				fps = Math.floor(fps * 10) / 10;  								disp.text = fps + ' / ' + stage.frameRate;				if(fps<stage.frameRate/3){					disp.textColor=0xff0000;				} else if(fps<stage.frameRate/3*2&&fps>=stage.frameRate/3){					disp.textColor=0xffbb00;				} else if(fps<stage.frameRate/3&&fps>=stage.frameRate/3){				} else {					disp.textColor=0x00ccff;				}				old_timer = getTimer();				draw_count = 0;			}		}		private function setDisplay(){			disp = new TextField();			addChild(disp);			disp.width = 100;		    disp.height = 18;			disp.textColor = color;			disp.selectable = false;		}	}}