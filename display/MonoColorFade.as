/*===========================================================================================*//*	単一カラーのフェードオブジェクト	*//*===========================================================================================*/package ffroman.display{	import flash.display.Shape;	import flash.display.Sprite;	import flash.display.SimpleButton;	import flash.events.*;	import caurina.transitions.Tweener;	public class MonoColorFade extends Sprite {		public function MonoColorFade($color:uint=0x00cc00,$w:uint=100,$h:uint=100){//			alpha = 0;//			visible = false;			graphics.beginFill($color,1);			graphics.moveTo(0,0);			graphics.lineTo($w,0);			graphics.lineTo($w,$h);			graphics.lineTo(0,$h);			graphics.endFill();		}		public function fadeIn($time:Number=1,$delay:Number=0,$transition:String="easeOutQuad"):void{			visible = true;			alpha = 0;			Tweener.addTween(this,{alpha:1,time:$time,delay:$delay,transition:$transition,onComplete:compFunc});		}		public function compFunc(){			dispatchEvent(new Event(Event.COMPLETE));		}		public function fadeOut($time:Number=1,$delay:Number=0,$transition:String="easeOutQuad"):void{			this.visible = true;			this.alpha = 1;			Tweener.addTween(this,{alpha:0,time:$time,delay:$delay,transition:$transition,onComplete:function(){dispatchEvent(new Event(Event.COMPLETE))}})		}	}}