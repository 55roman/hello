package ffroman.display{/*========================================================================**	SimpleButtonEx**	@BtnPrototypeを用いたシンプルなボタン*	@手っ取り早くテスト用のボタンオブジェクトを作成したい時に**	SimpleButtonEx(*		$size:uint,					//サイズ*		$col:uint,					//カラー*	)*=========================================================================*/	import flash.display.Sprite;	//	public dynamic class SimpleButtonEx extends Sprite{		var bp:BtnPrototype;		public function SimpleButtonEx($size:uint= 4,$col:uint = 0x333333,$alpha:Number = 1){			this.graphics.beginFill($col,$alpha);			this.graphics.lineStyle(0,0xff0000);			this.graphics.moveTo(-$size/2,-$size/2);			this.graphics.lineTo($size/2,-$size/2);			this.graphics.lineTo($size/2,$size/2);			this.graphics.lineTo(-$size/2,$size/2);			this.graphics.lineTo(-$size/2,-$size/2);			this.graphics.endFill();			this.graphics.lineTo($size/2,$size/2);			this.graphics.lineTo(-$size/2,$size/2);			this.graphics.lineTo($size/2,-$size/2);			var bp = new BtnPrototype(this)			addChild(bp);		}		public var overFunc:Function;		public var outFunc:Function;		public var releaseFunc:Function;		public var pressFunc:Function;	}}